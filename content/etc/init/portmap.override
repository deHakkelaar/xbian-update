start on starting statd
stop on unmounted-remote-filesystems or stopped statd

env STATEDIR=/run/rpcbind

pre-start script
        mkdir -p $STATEDIR

        [ -f $STATEDIR/rpcbind.xdr ] || touch $STATEDIR/rpcbind.xdr || :
        [ -f $STATEDIR/portmap.xdr ] || touch $STATEDIR/portmap.xdr || :
end script

